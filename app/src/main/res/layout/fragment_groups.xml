<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.GroupsFragment">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_Groups"
        android:layout_width="350dp"
        android:layout_height="540dp"
        android:layout_margin="10dp">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/groups_Keyboard"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/botron"
            android:padding="15dp"
            android:src="@drawable/dialpad_24dp_e8eaed_fill0_wght400_grad0_opsz24" />

        <ImageView
            android:id="@+id/groups_add"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="90dp"
            android:background="@drawable/bovuong"
            android:padding="15dp"
            android:src="@drawable/add_24dp_e8eaed_fill0_wght400_grad0_opsz24" />
    </LinearLayout>
</LinearLayout>